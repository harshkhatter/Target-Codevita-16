# https://www.hackerrank.com/challenges/p1-paper-cutting

#!/bin/python3

import math
import os
import random
import re
import sys

# Complete the solve function below.
def solve(n, m):
    # just return the mxn - 1
    return m * n  -  1;

if __name__ == '__main__':
    fptr = open(os.environ['OUTPUT_PATH'], 'w')

    nm = input().split()

    n = int(nm[0])

    m = int(nm[1])

    result = solve(n, m)

    fptr.write(str(result) + '\n')

    fptr.close()

# https://www.hackerrank.com/challenges/p1-paper-cutting
